<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.owlmapp.MapFragment">

    <AutoCompleteTextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/actvOrigin"
        android:singleLine="true"
        android:hint="Ingrese su lugar de origen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/actvDestination"
        android:singleLine="true"
        android:hint="Ingrese su lugar de destino"
        android:layout_below="@+id/actvOrigin"
        android:layout_alignLeft="@+id/actvOrigin"
        android:layout_alignStart="@+id/actvOrigin" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/actvDestination" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MapType"
        android:drawableTint="#000000"
        android:drawableLeft="@android:drawable/ic_menu_view"
        android:layout_alignTop="@+id/map"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>
